# Puerto de ejecución
PORT=3000

# Base de datos MongoDB
DB_URI=mongodb+srv://<usuario>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Motor de base de datos (nosql o mysql)
ENGINE_DB=nosql

# JWT
JWT_SECRET=tu_clave_secreta_super_segura

# URL pública (para servir imágenes, logos, etc.)
PUBLIC_URL=http://localhost:3000

# Pinata / IPFS
PINATA_GATEWAY_URL=green-sloth.pinata.cloud
PINATA_KEY=tu_pinata_api_key
PINATA_SECRET=tu_pinata_secret_api_key

# Email (OAuth2 con Gmail)
EMAIL=correo@gmail.com
CLIENT_ID=tu_oauth_client_id
CLIENT_SECRET=tu_oauth_client_secret
REDIRECT_URI=https://developers.google.com/oauthplayground
REFRESH_TOKEN=tu_oauth_refresh_token

# Slack webhook para logs
SLACK_WEBHOOK=https://hooks.slack.com/services/...

# Base de datos MySQL (si usas mysql)
MYSQL_DATABASE=apiserver
MYSQL_USER=root
MYSQL_PASSWORD=1234
MYSQL_HOST=localhost
